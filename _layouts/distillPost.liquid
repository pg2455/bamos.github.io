---
layout: base
---

<br/>
<div class="container">
<div class="row">
<div class="col-md">
    <d-title>
      <h1>{{ page.title }}</h1>
      <p>{{ page.description }}</p>
    </d-title>

    <d-article>
      <span>
        <em>Published: {{ page.date | date: "%B %e, %Y" }}</em>
        <br>
        {% include sharingbuttons.html %}

        {% if page.summary %}
          <h3>Summary</h3>
          {{ page.summary }}
        {% endif %}
      </span>

      <hr style="margin-top: 0;">
      <div style="display:inline-block; font-size: large; padding-bottom: 30px;">
        {% if page.series and page.previous %}
          <span style="float:left"><i class="fas fa-2x fa-arrow-left"></i> &thinsp; <a style="text-decoration: none" href="/blog/{{ page.date | date: "%Y" }}/{{ page.series.name }}-{{ page.series.id | minus: 1 }}"><em>{{ page.previous.title }}</a></em></span>
        {% endif %}

        {% if page.series and page.next %}
          <span style="float:right"><a style="text-decoration: none" href="/blog/{{ page.date | date: "%Y" }}/{{ page.series.name }}-{{ page.series.id | plus: 1 }}"><em>{{ page.next.title }}</a> &thinsp; </em><i class="fas fa-2x fa-arrow-right"></i></span>
        {% endif %}
      </div>

      {{ content }}

      <div style="display:inline-block; font-size: large; padding-bottom: 30px;">
        {% if page.series and page.previous %}
          <span style="float:left"><i class="fas fa-2x fa-arrow-left"></i> &thinsp; <a style="text-decoration: none" href="/blog/{{ page.date | date: "%Y" }}/{{ page.series.name }}-{{ page.series.id | minus: 1 }}"><em>{{ page.previous.title }}</a></em></span>
        {% endif %}

        {% if page.series and page.next %}
          <span style="float:right"><a style="text-decoration: none" href="/blog/{{ page.date | date: "%Y" }}/{{ page.series.name }}-{{ page.series.id | plus: 1 }}"><em>{{ page.next.title }}</a> &thinsp; </em><i class="fas fa-2x fa-arrow-right"></i></span>
        {% endif %}
      </div>

    </d-article>

    <d-appendix>
      <d-footnote-list></d-footnote-list>
      <d-citation-list></d-citation-list>
    </d-appendix>

    <d-bibliography src="/vendor/bibliography/{{ page.bibliography }}">
    </d-bibliography>

    <d-article>
    <div id="disqus_thread"></div>
    </d-article>
</div>
</div>
</div>

